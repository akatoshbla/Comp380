<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much would you like to put towards your goal?"
        android:id="@+id/savingsText"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amountEdit"
        android:maxLength="12"
        android:inputType="numberDecimal"
        android:layout_below="@+id/savingsText" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/savingsCancelButton"
        android:layout_below="@id/amountEdit"
        android:onClick="onClick"
        style="@style/Buttons"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addSavingsButton"
        android:layout_below="@id/amountEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        style="@style/Buttons"/>

</RelativeLayout>