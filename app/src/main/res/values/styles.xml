<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="WelcomeScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/splash_background</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:editTextBackground">@color/edit_text_background</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_background</item>
        <item name="background">@drawable/ab_background</item>
    </style>

    <style name="ExpenseBackground">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Buttons">
        <item name="android:background">@color/buttons</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
